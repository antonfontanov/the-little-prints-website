{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*.{png,jpg,gif,svg}",
      "/assets/*",
      "/favicon.ico",
      "/favicon.svg",
      "/*.{css,js,png,jpg,gif,svg,ico,json,woff,woff2,ttf,eot}"
    ]
  },

  "routes": [
    {
      "route": "/",
      "rewrite": "/index.html"
    },
    {
      "route": "/examples",
      "rewrite": "/index.html"
    },
    {
      "route": "/learn-more", 
      "rewrite": "/index.html"
    },
    {
      "route": "/order",
      "rewrite": "/index.html"
    },
    {
      "route": "/payment",
      "rewrite": "/index.html"
    },
    {
      "route": "/confirmation",
      "rewrite": "/index.html"
    }
  ],
  "globalHeaders": {
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Content-Security-Policy": "upgrade-insecure-requests",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }
  }
}
